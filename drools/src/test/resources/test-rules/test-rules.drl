package rules
 
import model.Product
import java.util.Date

global readDroolsReturnedValue.DroolsResultContainer resultContainer;

rule "Offer for Diamond"
	when 
		productObject: Product()
	then
		productObject.setDiscount(150000);
//		insert(new Date());
		resultContainer.putValueByKey("k1", productObject);
		resultContainer.putValueByKey("k2", new Date());
	end